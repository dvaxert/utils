{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-x64-shared-md-vcpkg",
      "description": "Build shared md library using MSVC 2022 Generator",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64"
      },
      "toolchainFile": "$env{TOOLCHAINFILE}",
      "binaryDir": "${sourceDir}/build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "UTILS_BUILD_SHARED_LIBS": "ON",
        "UTILS_BUILD_TESTING": "ON",
        "UTILS_MSVC_STATIC_RUNTIME": "OFF",
        "UTILS_BUILD_EXAMPLE": "OFF",
        "UTILS_GENERATE_DOCUMENTATION": "OFF",
        "UTILS_INSTALL": "OFF",
        "UTILS_PEDANTIC": "ON",
        "UTILS_WERROR": "ON",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
